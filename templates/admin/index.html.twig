{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
    <div class="d-flex align-items-center justify-content-center">
        <img class="logomenu img-fluid" src="{{ asset('asset/image/imgdoss.png') }}">
        <h2 class="mt-3">Bienvenue</h2>
        <img class="logomenu img-fluid" src="{{ asset('asset/image/imgdoss.png') }}">
    </div>

    <div class="container">

            <div class="d-flex align-items-center justify-content-start">
                <img class="logomenu img-fluid" src="{{ asset('asset/image/imgdoss.png') }}">
                <h2 class="mt-3">Reservations</h2>
                <img class="logomenu img-fluid" src="{{ asset('asset/image/imgdoss.png') }}">
            </div>

            {% for reservation in reservations|sort((a, b) => a.dateReserv <=> b.dateReserv) %}
                {% if reservation.dateReserv > date() %}
                <div class="badge bg-primary">{{ reservation.dateReserv|date ('d/m/y') }} Ã  {{ reservation.hourReserv|date ('H:i') }}</div>
                <div>
                    {% if reservation.user %}
                    <p><b>Client :</b> {{ reservation.user }}</p>
                    {% endif %}
                    <p><b>Allergies dans le groupe :</b> {{ reservation.allergy }}</p>
                    <p><b>Nombre de convives :</b> {{ reservation.numberOfSeats }}</p>
                </div>
                {% endif %}
            {% endfor %}



    </div>
{% endblock %}
